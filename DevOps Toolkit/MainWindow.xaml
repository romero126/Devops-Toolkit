<Window x:Class="DevOps_Toolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:UI="clr-namespace:DevOps_Toolkit.UI"
        xmlns:local="clr-namespace:DevOps_Toolkit"
        mc:Ignorable="d"
        Title="DevOps Toolkit"
	Loaded="Window_Loaded"
	Width="683"
	MinWidth="790"
	MinHeight="510"
	Height="510"
	UseLayoutRounding="True"
	>
	<Grid Margin="0,0,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="0" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="85" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
				
		</Grid>

		<Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
			<UI:Sidebar x:Name="Sidebar"></UI:Sidebar>
		</Grid>
		<Grid Grid.Row="1" Grid.Column="1" Background="LightSlateGray">
			<UI:Body x:Name="Body"></UI:Body>
		</Grid>
	</Grid>
</Window>
